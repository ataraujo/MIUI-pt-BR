<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="NoResultHints">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">left|center</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20.0dip</item>
        <item name="android:drawableLeft">@drawable/text_header_dot</item>
        <item name="android:drawablePadding">5.0dip</item>
    </style>
    <style name="RecentAppsButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff4f5961</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">43.0dip</item>
        <item name="android:shadowColor">#99ffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="RecentAppsIconsWrapper">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginTop">18.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
