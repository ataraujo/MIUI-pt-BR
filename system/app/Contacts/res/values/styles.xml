<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="ContactsSearchTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ContactsSearchAnimation</item>
    </style>
    <style name="TallTitleBarTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TransparentNoTitleDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="BackgroundOnly">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoDisplay">true</item>
    </style>
    <style name="FullyTranslucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="FullyTranslucent.QuickContact" parent="@style/FullyTranslucent">
        <item name="android:windowAnimationStyle">@style/DummyAnimation</item>
    </style>
    <style name="QuickContact">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="QuickContactAboveAnimation">
        <item name="android:windowEnterAnimation">@anim/quickcontact_above_enter</item>
        <item name="android:windowExitAnimation">@anim/quickcontact_above_exit</item>
    </style>
    <style name="QuickContactBelowAnimation">
        <item name="android:windowEnterAnimation">@anim/quickcontact_below_enter</item>
        <item name="android:windowExitAnimation">@anim/quickcontact_below_exit</item>
    </style>
    <style name="ContactsSearchAnimation">
        <item name="android:windowEnterAnimation">@anim/search_bar_enter</item>
        <item name="android:windowExitAnimation">@anim/search_bar_exit</item>
    </style>
    <style name="DummyAnimation">
        <item name="android:windowExitAnimation">@anim/dummy_animation</item>
    </style>
    <style name="DialerButtonRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="DialerButton">
        <item name="android:background">@drawable/dialer_button</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="CallButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialer_call</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:text">@string/callButtonText</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="TextStyleCallButton">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">@color/call_button_text</item>
        <item name="android:shadowColor">@color/call_button_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="TextStyleOpenDailerButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/open_dialer_button_text</item>
        <item name="android:shadowColor">@color/open_dialer_button_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="TextStyleDialerDigits">
        <item name="android:textSize">28.0sp</item>
        <item name="android:textColor">@color/dailer_digits_text</item>
        <item name="android:shadowColor">@color/dialer_digits_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="TextStyleMissedCall" parent="@android:style/TextAppearance.ListView.PrimaryItem">
        <item name="android:textColor">@color/missed_call_text</item>
    </style>
    <style name="TextStyleSmartDialer" parent="@android:style/TextAppearance.ListView.SecondaryItem">
        <item name="android:textSize">@android:dimen/list_primary_text_size</item>
    </style>
    <style name="PrimaryItemSmall" parent="@android:style/TextAppearance.ListView.PrimaryItem">
        <item name="android:textSize">@android:dimen/preference_secondary_text_size</item>
    </style>
</resources>